@page
@model AssetManagement.Pages.ProductCategories.IndexModel

@{
    ViewData["Title"] = "Product Categories";
}

<h1>Index</h1>
<h4>ProductCategories</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProductCategoryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProductCategoryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProductCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
